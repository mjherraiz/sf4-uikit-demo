{% extends 'base.html.twig' %}
{% block title %}Hello PageController!
{% endblock %}
{% block body %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a href="{{ path('app_logout') }}">Logout</a>
    {% else %}
        <a href="{{ path('app_login') }}">Login</a>
    {% endif %}
    <div uk-filter="target: .js-filter">
        <ul class="uk-subnav uk-subnav-pill">
            <li class="uk-active" uk-filter-control="[data-tags*='all']">
                <a href="#">All</a>
            </li>
            {% for tag in tags %}
                <li uk-filter-control="[data-tags*='{{tag}}']">
                    <a href="#">{{tag}}</a>
                </li>
            {% endfor %}
        </ul>
        <ul class="js-filter uk-child-width-1-1 uk-child-width-1-2@s uk-child-width-1-3@m uk-text-center" uk-grid>
            {% for add in ads %}
                <li data-tags="all {% for tag in add.tags %}{{ tag }} {% endfor %}">
                    <div class="uk-card uk-card-default">
                        {% if add.tags|length > 0 %}
                            <div class="">
                                {% for tag in add.tags %}
                                    <div class="uk-label">{{ tag }}</div>
                                {% endfor %}
                            </div>
                        {% endif %}
                        <div class="uk-card-header">
                            {% if vich_uploader_asset(add, 'imageFile') is not empty %}
                                <div class="uk-card-media-top">
                                    <div class="uk-thumbnail uk-thumbnail-small">
                                        <img class="uk-thumbnail uk-thumbnail-small" src="{{ vich_uploader_asset(add, 'imageFile') }}"/>
                                    </div>
                                </div>
                            {% endif %}
                            <h3 class="uk-card-title">{{ add.title|slice(0, 50) }}</h3>
                        </div>
                        <div class="uk-card-body">
                            <p>{{ add.body }}</p>
                        </div>
                        <div class="uk-card-footer">
                            {{add.updatedAt|date}}
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}