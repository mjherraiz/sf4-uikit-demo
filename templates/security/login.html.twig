{% extends 'base.html.twig' %}
{% block body %}
    <form class="uk-form uk-width-2-3 uk-align-center" method="post">
        {% if error %}
            <div class="uk-alert uk-alert-danger">
                <a class="uk-alert-close uk-close" href=""></a>
                <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
            </div>
        {% endif %}
        <fieldset class="uk-fieldset uk-form uk-width-1-3 uk-align-center" data-uk-margin>
            <legend class="uk-legend">Login</legend>
            <div class="uk-form-row">
                <input class="uk-form-large form-control" type="email" value="{{ last_username }}" name="email" placeholder="Email" required autofocus/>
            </div>
            <div class="uk-form-row">
                <input class="uk-form-large form-control" name="password" placeholder="Password" required type="password"/>
            </div>
            <div class="uk-form-row">
                <input name="_remember_me" type="checkbox"/>
                Remember me
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button class="uk-button" type="submit">Login</button>
            </fieldset>
        </form>
    {% endblock %}